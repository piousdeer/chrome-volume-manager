{
  "manifest_version": 2,
  "name": "Volume Manager",
  "version": "1.0.0",
  "description": "Control any tab's volume separately",
  "permissions": [
    "activeTab",
    "tabCapture"
  ],
  "browser_action": {
    "default_icon": "icons/512.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  }
}